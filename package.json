{
	"name": "@org/source",
	"version": "2.7.0",
	"license": "MIT",
	"scripts": {
		"release": "release-it",
		"prepare": "npx husky && lint-staged --concurrent false"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lint-staged --concurrent false",
			"pre-push": "npx lint-staged -concurrent false"
		}
	},
	"release-it": {
		"git": {
			"commitMessage": "chore: v${version}"
		},
		"github": {
			"release": false
		},
		"npm": {
			"publish": false
		},
		"plugins": {
			"@release-it/conventional-changelog": {
				"infile": "apps/site/src/assets/md/CHANGELOG.md",
				"preset": {
					"name": "conventionalcommits",
					"typws": [
						{
							"type": "feat",
							"section": "features"
						},
						{
							"type": "fix",
							"section": "fixes"
						}
					]
				}
			}
		}
	},
	"lint-staged": {
		"*.ts": [
			"eslint --fix \"**/*.ts\"",
			"prettier * --write",
			"git commit . -F --allow-empty"
		],
		"*.html": [
			"prettier --write",
			"git commit . -F --alow-empty"
		],
		"*.scss": [
			"prettier --write",
			"stylelint \\\"**/*.scss\\\" --fix -f",
			"git commit --allow-empty .  -F "
		]
	},
	"private": true,
	"dependencies": {
		"@angular-eslint/schematics": "^17.3.0",
		"@angular-eslint/utils": "18.0.1",
		"@angular/animations": "18.2.2",
